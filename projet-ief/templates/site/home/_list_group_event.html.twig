<div class="list-group d-none d-sm-block">
    <h3 class="d-flex justify-content-between align-items-center mb-3">
        <span class="">Vos 5 {{ info }} évenements</span>
    </h3>
    {% for event in events %}
        <div id="list-event">
            <a href="{{ path('site_event_read', {'id': event.id}) }}" class="list-group-item list-group-item-action" aria-current="">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ event.title|u.truncate(20, '...') }}</h5>
                    {% if event.author is null %}
                     <small class="author text-capitalize" >par Utilisateur supprimé</small>
                    {% else %}
                        <small class="author text-capitalize" >par {{ event.author.name}}</small>
                    {% endif %}
                </div>
                    <div class="d-flex w-100 justify-content-between">
                        <div class="col">
                            <p class="mb-1 text-muted">le {{ event.date|date("d/m/Y à h:i")}}
                            <br>à {{ event.lieu }}</p>
                            <p class="mb-1"><br>{{ event.description|u.truncate(70, '...')}}
                            </p>
                        </div>
                        <div class="col-4 img-group-list-five-event">
                            <div class="image-card {{ (event.complet == 1) ? 'div-completed' : '' }}" style="background-image:url({{ (event.img == null ) ? '/uploads/img/category/' ~ event.category.0.imgDefaut : '/uploads/img/img_event/' ~ event.img}})"></div>
                        </div>
                    </div>
                <small></small>
            </a>
         </div>
    {% endfor %}
</div>