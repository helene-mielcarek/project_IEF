<div class="col d-sm-none">
    <h3 class="d-flex justify-content-between align-items-center mb-3">
        <span class="">Vos 5 {{ info }} évenements</span>
    </h3>
    <div id="card-sans-carousel" class="col ">
        {% for event in events %}
            <div id="cardFiveEvent" class="col-md-4">
                <div  class="card">
                    <a href="{{ path('site_event_read', {'id': event.id}) }}">
                        <div class="image-card {{ (event.complet == 1) ? 'div-completed' : '' }}" style="background-image:url({{ (event.img == null ) ? '/uploads/img/category/' ~ event.category.0.imgDefaut : '/uploads/img/img_event/' ~ event.img}})"></div>
                    </a>
                    <div class="card-body">
                        <a href="{{ path('site_event_read', {'id': event.id}) }}">
                            <h6>{{event.title|u.truncate(20,"...")}}</h6>
                        </a>
                        <p class="card-text text-muted">{{event.date|date("d/m/Y")}}</p>
                        {% if event.author is null %}
                        <p class="author text-capitalize">Utilisateur supprimé</p>
                        {% else %}
                            <p class="author text-capitalize">{{ event.author.name }}</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
