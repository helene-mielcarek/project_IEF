
<div id="carousel5NextOrLast" class="col small-carousel d-sm-none">
    <h3 class="d-flex justify-content-between align-items-center mb-3">
        <span class="">Vos 5 {{ info }} événements</span>
    </h3>
    <!--Carousel Wrapper-->
    <div id="carouselFive{{ id }}" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-pause="hover" data-bs-interval="3000">
        <!--Slides-->
        <div class="carousel-inner" role="listbox">
        {% for event in events %}
            <div class="carousel-item {% if loop.first %}active{% endif %}">
                <div class="col-md-4">
                    <div id="cardFiveEvent" class="card">
                    <a href="{{ path('site_event_read', {'id': event.id}) }}">
                        <div class="image-card {{ (event.complet == 1) ? 'div-completed' : '' }}" style="background-image:url({{ (event.img == null ) ? '/uploads/img/category/' ~ event.category.0.imgDefaut : '/uploads/img/img_event/' ~ event.img}})"></div>
                    </a>
                        <div class="card-body">
                            <a href="{{ path('site_event_read', {'id': event.id}) }}">
                                <h6>{{event.title|u.truncate(20,"...")}}</h6>
                            </a>
                            <p class="card-text">{{event.date|date("d/m/Y")}}</p>
                            {% if event.author is null %}
                            <p class="author text-capitalize">Utilisateur supprimé</p>
                            {% else %}
                                <p class="author text-capitalize">{{ event.author.name }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
        <!--/.Slides-->
        <!--Controls-->
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselFive{{id}}" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselFive{{id}}" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        <!--/.Controls-->
        <!--Indicators-->
        <div class="carousel-indicators">
            {% for i in events %}
            <button type="button" data-bs-target="#carouselFive{{id}}" data-bs-slide-to="{{ loop.index0 }}" class="{% if loop.first %} active {% endif %}" aria-label="Slide {{ loop.index0 }}"></button>
            {% endfor %}
        </div>
        <!--/.Indicators-->
    </div> 
    <!--/.Carousel Wrapper-->
</div>