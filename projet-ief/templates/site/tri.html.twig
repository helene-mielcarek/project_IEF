<a class="button-sorting-{{ title }} btn btn-secondary btn-sm m-2 text-white text-decoration-none fw-bolder" {% for attr, value  in options %} {{ attr }}="{{ value }}"{% endfor %}>
    <span class="float-end">
        {% if sorted %}
            {% if direction == 'desc' %}
                <i class="bi bi-arrow-down "></i>
            {% else %}
                <i class="bi bi-arrow-up"></i>
            {% endif %}
        {% else %}
            <i class="bi bi-arrow-down-up"></i>
        {% endif %}
    </span>
    <span class="content-btn-sorting-{{ title }}">
        {{ title }}
    </span>
</a>